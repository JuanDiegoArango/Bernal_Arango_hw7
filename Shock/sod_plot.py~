strings= nombreSinDat.split('_')

tf=float(arregloStrings[1].strip('.dat'))
data= np.loadtxt(datos)
figRho= plt.figure()
plt.xlabel('x [m]')
plt.ylabel('Rho [kg/m^3]')
plt.title('Densidad t='+str(tf)+' s')
plt.plot(data[:,0],data[:,3])
plt.grid()
figVel = plt.figure()
plt.xlabel('x [m]')
plt.ylabel('V [m/s]')
plt.title('Velocidad t='+str(tf)+' s')
plt.plot(data[:,0],data[:,1])
plt.grid()
figP = plt.figure()
plt.xlabel('x [m]')
plt.ylabel('P [Pa]')
plt.title('Presion t='+str(tf)+' s')
plt.plot(data[:,0],data[:,2])
plt.grid()
pp = PdfPages(nombreSinDat+'.pdf')
pp.savefig(figRho)
pp.savefig(figVel)
pp.savefig(figP)
pp.close()
